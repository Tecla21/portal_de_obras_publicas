<div class="form-group">
  <%- if controller_name != 'sessions' %>
    <%= link_to t('devise.links.sign_in').upcase, new_session_path(resource_name), class: "btn btn-link form-control" %>
  <% end %>
</div>

<div class="form-group">
  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <%= link_to t('devise.links.sign_up').upcase, new_registration_path(resource_name), class: "btn btn-primary form-control" %>
  <% end %>
</div>

<div class="form-group">
  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <%= link_to t("devise.links.forgot_your_password"), new_password_path(resource_name), class: "btn btn-link form-control" %>
  <% end %>
</div>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to t('devise.links.new_confirmation'), new_confirmation_path(resource_name) %>
<% end %>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to t("devise.links.unlock_account"), new_unlock_path(resource_name) %><br />
<% end %>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= link_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider) %><br />
  <% end %>
<% end %>
