<div class="container">
  <div class="form-group mx-auto col-10 col-sm-10 col-md-6 col-lg-4">
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <h1 class="h3 mb-3 text-center font-weight-normal">Editar segurança da conta <%= current_user.email  %></h1>
        <%= f.input :email, required: true, label: false, placeholder: "email@exemplo.com", input_html: { autocomplete: "email", class: "text-center" }%>
        <%= f.input :password, label: false, hint: "deixar em branco se não pretende alterar", required: false, placeholder: "nova senha", input_html: { autocomplete: "new-password" } %>
        <%= f.input :password_confirmation, required: false, label: false, placeholder: "repetir a nova senha", input_html: { autocomplete: "new-password" } %>
        <%= f.input :current_password, label: "Senha actual", placeholder: "senha actual", hint: "precisamos da sua senha actual para confirmar alterações", required: true, input_html: { autocomplete: "current-password" } %>

      <div class="form-group">
        <%= f.button :submit, t('devise.buttons.update').upcase, class: "btn btn-primary form-control"%>
      </div>
    <% end %>

    <%= link_to t('devise.buttons.cancel').upcase, :back, class: "btn btn-link form-control" %>
  </div>
</div>
