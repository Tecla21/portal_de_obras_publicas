<div class="container">
  <div class="form-group mx-auto col-10 col-sm-10 col-md-6 col-lg-4">
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <h1 class="h3 mb-3 text-center font-weight-normal">Registar</h2>
        <%= f.input :cellphone, required: true, label: false, autofocus: true, placeholder: t('views.users.labels.cellphone'), input_html: { class: "text-center" }%>
        <%= f.input :email, required: true, label: false, placeholder: "email@exemplo.com", input_html: { autocomplete: "email", class: "text-center" }%>
        <%= f.input :password, required: true, label: false, hint: ("#{@minimum_password_length} caracteres no mÃ­nimo" if @minimum_password_length), placeholder: "sua senha", input_html: { autocomplete: "new-password", class: "text-center"} %>
        <%= f.input :password_confirmation, required: true, label: false, placeholder: "repetir a senha", input_html: { autocomplete: "new-password", class: "text-center"} %>

      <div class="form-group">
        <%= f.button :submit, t("devise.buttons.sign_up").upcase, class:"btn btn-primary form-control" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
