<div class="container">
  <div class="form-group mx-auto col-10 col-sm-10 col-md-6 col-lg-4">
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <h1 class="h3 mb-3 text-center font-weight-normal">Simple</h2>
      <%= f.input :email, required: false, autofocus: true, label: false, placeholder: "email@exemplo.com", input_html: { autocomplete: "email", class: "text-center"} %>
      <%= f.input :password, required: false, label: false, input_html: { autocomplete: "current-password", class: "text-center" } %>

      <div class="form-group">
        <%= f.button :submit, t("devise.buttons.sign_in").upcase, class:"btn btn-success form-control"%>
      </div>
    <% end %>

    <hr>
    <%= render "devise/shared/links" %>
  </div>
</div>

