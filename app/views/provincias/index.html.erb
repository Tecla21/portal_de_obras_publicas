<div class="row">
  <div class="col">
    <div class="card">
      <div class="card-header">
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
          <%= link_to 'Províncias', "#", class: "navbar-brand" %>
          <ul class="navbar-nav ml-auto mt-2 mt-lg-0">
            <li><%= link_to 'Novo', new_provincia_url, class: "btn btn-primary mr-auto"%></li>
          </ul>
        </nav>
      </div >

      <div class="card-body">
		<table class="table table-hover">
			<thead>
				<tr>
					<th class="text-left ">Nome</th>
					<th class="text-left ">Pais</th>
					<th class="text-left ">Acções</th>
				</tr>
			</thead>

			<tbody>
				<% @provincias.each do |provincia| %>
					<tr>
						<td class="text-left "><%= provincia&.nome %></td>
						<td class="text-left "><%= provincia&.pais.nome %></td>
						<td class="text-left"><%= link_to 'Ver', provincia_url(provincia), class: 'mr-auto'%></td>
					
					</tr>
				<% end %>
			</tbody>
		</table>
      </div >
      <div class="card-footer">
        <%= render partial: 'shared/pagination', locals: {pagy: @pagy} %>
      </div>
    </div>
  </div>
</div>
