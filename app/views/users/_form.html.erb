<div class="row">
  <div class="col">
    <div class="card">
      <%= simple_form_for @user do |f| %>
        <!-- toolbar -->
        <div class="card-header">
          <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <%= content_tag(:a, class: 'navbar-brand') do %>
              <%= action_name == "new" ? t('views.users.new_user') : t('views.users.edit_user') %>
            <% end %>
            <ul class="navbar-nav ml-auto mt-2 mt-lg-0">
              <li>
              <%= f.button :submit, class:"btn btn-success"%>
              <% if action_name == "edit"  %>
                <%= link_to t('views.users.buttons.show_details'), @user, class:"btn btn-primary" %>
              <% end  %>
              <%= link_to t('views.users.buttons.list_users'), users_url, class:"btn btn-secondary" %>
              </li>
            </ul>
          </nav>
        </div>

        <div class="card-body">
          <div class="row">
            <div class="col-sm-12 col-md-6">
              <%= f.input :email, label: t('views.users.labels.email'), input_html: { class: "form-control form-control-lg" } %>
            </div>
            <div class="col-sm-12 col-md-6">
              <%= f.input :cellphone, label: t('views.users.labels.cellphone'), input_html: { class: "form-control form-control-lg" } %>
            </div>
            <div class="col-sm-12 col-md-6">
              <%= f.input :current_password, label: "Senha actual", placeholder: "senha actual", hint: "precisamos da sua senha actual para confirmar alterações", required: true, input_html: { autocomplete: "current-password" } %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
