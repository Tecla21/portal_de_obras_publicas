<div class="row">
  <div class="col">
    <div class="card">
      <div class="card-header">
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
          <%= link_to @user.cellphone, "#", class: "navbar-brand" %>
          <ul class="navbar-nav ml-auto mt-2 mt-lg-0">
            <li>
              <%= link_to t('security'), edit_user_registration_path, class: "btn btn-danger" if @user.id == current_user.id%>
              <%= link_to t('views.users.buttons.edit_user'), edit_user_url(@user), class: "btn btn-primary"%>
              <%= link_to t('views.users.buttons.list_users'), users_url, class: "btn btn-secondary"%>
            </li>
          </ul>
        </nav>
      </div >

      <div class="card-header">
        <div class="row paymentDetails">
          <div class="col-sm-12 col-md-4 paymentDetailsStatus">
            <%= image_tag("angola.svg", size: 150, class: 'card-img-top') %>
          </div>
          <div class="col-sm-12 col-md-8">
            <div class="row">
              <div class="col-sm-12 paymentDetailsCell">
                <ul class="paymentDetailsItem">
                  <li class="text-center paymentDetailsItemLabel">
                    <span>Telem√≥vel</span>
                  </li>
                  <li class="text-center paymentDetailsItemValue">
                    <%= cellphone(@user.cellphone) %>
                  </li>
                </ul>
              </div>
            </div>
            <div class="row">
              <div class="col-sm-12 paymentDetailsCell">
                <ul class="paymentDetailsItem">
                  <li class="text-center paymentDetailsItemLabel">
                    <span>Email</span>
                  </li>
                  <li class="text-center paymentDetailsItemValue">
                    <%= @user.email %>
                  </li>
                </ul>
              </div>
            </div>
          </div>
        </div>
      </div >
    </div>
  </div>
</div>